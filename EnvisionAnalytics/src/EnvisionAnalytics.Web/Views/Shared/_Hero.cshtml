@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    var variant = (ViewData["HeroVariant"] as string ?? "dashboard").ToLowerInvariant();
    var isDashboard = variant == "dashboard";
    var heroClass = isDashboard
        ? "site-hero site-hero--dashboard"
        : $"auth-hero {(variant == "register" ? "register-hero" : "login-hero")}";
}

@if (isDashboard)
{
    <section class="@heroClass">
        <div class="container">
            <div class="row align-items-center g-4 site-hero__grid">
                <div class="col-lg-7">
                    <div class="site-hero__copy">
                        <p class="eyebrow">@Localizer["HeroTagline"]</p>
                        <h1 class="site-hero__title">@Localizer["HeroHeading"]</h1>
                        <p class="site-hero__subtitle">@Localizer["HeroSubtext"]</p>

                        <div class="mt-4 d-flex gap-3 flex-wrap" role="group" aria-label="Hero actions">
                            <a href="/Account/Register" class="btn btn-primary btn-lg cta-btn" aria-label="@Localizer["HeroCtaPrimary"]">
                                <span class="btn-label">@Localizer["HeroCtaPrimary"]</span>
                                <span class="btn-icon" aria-hidden="true">
                                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" focusable="false">
                                        <path d="M5 12h14M13 5l7 7-7 7" stroke="#fff" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round" />
                                    </svg>
                                </span>
                            </a>

                            <a href="/Home/LearnMore" class="btn btn-outline-light btn-lg cta-btn-outline" aria-label="@Localizer["HeroCtaSecondary"]">
                                <span class="btn-label">@Localizer["HeroCtaSecondary"]</span>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-lg-5 d-none d-lg-block">
                    <div class="hero-visual site-hero__visual" aria-hidden="true">
                        <div class="hero-mock" role="img" aria-label="Decorative dashboard mock">
                            <!-- Animated inline SVG mock representing a small dashboard (decorative only) -->
                            <svg viewBox="0 0 360 220" width="100%" height="100%" xmlns="http://www.w3.org/2000/svg" focusable="false" aria-hidden="true">
                                <defs>
                                    <linearGradient id="g1" x1="0" x2="1">
                                        <stop offset="0%" stop-color="#6c63ff" stop-opacity="0.22" />
                                        <stop offset="100%" stop-color="#5ee6eb" stop-opacity="0.06" />
                                    </linearGradient>
                                    <linearGradient id="cardBg" x1="0" x2="0" y1="0" y2="1">
                                        <stop offset="0%" stop-color="#ffffff" stop-opacity="0.08" />
                                        <stop offset="100%" stop-color="#ffffff" stop-opacity="0.03" />
                                    </linearGradient>
                                </defs>

                                <!-- card bg -->
                                <rect x="8" y="8" rx="14" ry="14" width="344" height="204" fill="url(#cardBg)" stroke="rgba(255,255,255,0.03)" />
                                <rect x="24" y="22" width="312" height="16" rx="6" fill="url(#g1)" opacity="0.95" />

                                <!-- left info tiles -->
                                <g class="tile-group" opacity="0.95">
                                    <rect x="28" y="54" width="100" height="44" rx="8" fill="#071022" />
                                    <rect x="28" y="104" width="100" height="46" rx="8" fill="#071022" />
                                    <text x="36" y="82" class="svg-label">$275.55</text>
                                    <text x="36" y="132" class="svg-label">1 order</text>
                                </g>

                                <!-- chart group -->
                                <g class="chart-group">
                                    <rect class="svg-bar" x="18" y="78" width="12" height="60" rx="2" style="animation-delay:0.06s" />
                                    <rect class="svg-bar" x="44" y="58" width="12" height="80" rx="2" style="animation-delay:0.12s" />
                                    <rect class="svg-bar" x="70" y="38" width="12" height="100" rx="2" style="animation-delay:0.18s" />
                                    <rect class="svg-bar" x="96" y="68" width="12" height="70" rx="2" style="animation-delay:0.24s" />
                                    <rect class="svg-bar" x="122" y="50" width="12" height="88" rx="2" style="animation-delay:0.30s" />

                                    <!-- smooth line overlay -->
                                    <polyline class="svg-line" points="6,100 30,82 56,64 82,76 108,66 134,54 160,68" stroke="#5ee6eb" stroke-width="2.4" fill="none" stroke-linecap="round" stroke-linejoin="round" />

                                    <!-- animated points -->
                                    <g class="svg-points" fill="#5ee6eb">
                                        <circle class="svg-point" cx="6" cy="100" r="2.8" style="animation-delay:0.5s" />
                                        <circle class="svg-point" cx="30" cy="82" r="2.8" style="animation-delay:0.56s" />
                                        <circle class="svg-point" cx="56" cy="64" r="2.8" style="animation-delay:0.62s" />
                                        <circle class="svg-point" cx="82" cy="76" r="2.8" style="animation-delay:0.68s" />
                                        <circle class="svg-point" cx="108" cy="66" r="2.8" style="animation-delay:0.74s" />
                                        <circle class="svg-point" cx="134" cy="54" r="2.8" style="animation-delay:0.80s" />
                                    </g>

                                    <text x="6" y="-4" class="svg-small">Revenue / Orders</text>
                                </g>
                            </svg>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
else
{
    <div class="@heroClass">
        <p class="eyebrow mb-2">@Localizer["HeroTagline"]</p>
        <h2 class="auth-hero__title">@Localizer["HeroHeading"]</h2>
        <p class="auth-hero__subtitle">@Localizer["HeroSubtext"]</p>
    </div>
}
