@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["ForgotPasswordTitle"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <h3 class="card-title mb-3">@Localizer["ForgotPasswordTitle"]</h3>
                <p class="text-muted">@Localizer["ForgotPasswordMessage"]</p>
                <form method="post" asp-action="ForgotPassword">
                    <div class="mb-3">
                        <label class="form-label" for="forgotEmail">@Localizer["EmailLabel"]</label>
                        <input id="forgotEmail" name="email" class="form-control" type="email" autocomplete="email" required />
                    </div>
                    <button class="btn btn-primary w-100" type="submit">@Localizer["SendResetCodeButton"]</button>
                </form>
            </div>
        </div>
    </div>
</div>
