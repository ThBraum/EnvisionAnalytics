@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["ResetPasswordTitle"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <h3 class="card-title mb-3">@Localizer["ResetPasswordTitle"]</h3>
                <p class="text-muted">@Localizer["ResetPasswordMessage"]</p>
                <form method="post" asp-action="ResetPassword">
                    <div class="mb-3">
                        <label class="form-label" for="resetEmail">@Localizer["EmailLabel"]</label>
                        <input id="resetEmail" name="email" class="form-control" type="email" autocomplete="email" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="resetCode">@Localizer["CodeLabel"]</label>
                        <input id="resetCode" name="code" class="form-control" maxlength="6" pattern="[0-9]{6}" autocomplete="one-time-code" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="resetPassword">@Localizer["NewPasswordLabel"]</label>
                        <input id="resetPassword" name="newPassword" type="password" class="form-control" autocomplete="new-password" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="confirmPassword">@Localizer["ConfirmPassword"]</label>
                        <input id="confirmPassword" name="confirmPassword" type="password" class="form-control" autocomplete="new-password" required />
                    </div>
                    <button class="btn btn-primary w-100" type="submit">@Localizer["ResetPasswordButton"]</button>
                </form>
            </div>
        </div>
    </div>
</div>
