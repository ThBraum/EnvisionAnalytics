@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PageTitle"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="about-page py-4">
    <section class="about-hero">
        <span class="about-pill">@Localizer["PillLabel"]</span>
        <h1 class="mt-3">@Localizer["HeroHeading"]</h1>
        <p class="lead text-white-50 mb-4">
            @Localizer["HeroLead"]
        </p>

        <div class="about-hero__grid">
            <div class="about-highlight">
                <strong>@Localizer["HighlightKpiTitle"]</strong>
                <span>@Localizer["HighlightKpiDescription"]</span>
            </div>
            <div class="about-highlight">
                <strong>@Localizer["HighlightStreamingTitle"]</strong>
                <span>@Localizer["HighlightStreamingDescription"]</span>
            </div>
            <div class="about-highlight">
                <strong>@Localizer["HighlightExportTitle"]</strong>
                <span>@Localizer["HighlightExportDescription"]</span>
            </div>
        </div>

        <div class="about-cta">
            <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg cta-btn">
                <span class="btn-label">@Localizer["PrimaryCta"]</span>
            </a>
            <a asp-controller="Home" asp-action="Index" asp-fragment="demo" class="btn btn-outline-light btn-lg cta-btn-outline">
                @Localizer["SecondaryCta"]
            </a>
        </div>
    </section>

    <div class="row mt-4 g-4">
        <div class="col-lg-5">
            <div class="profile-card h-100">
                <div class="profile-card__avatar" aria-hidden="true">MB</div>
                <p class="mb-1 text-uppercase small text-white-50">@Localizer["ProfileRoleLabel"]</p>
                <h3 class="mb-2">Matheus Thomaz Braum</h3>
                <p class="text-white-50 mb-3">@Localizer["ProfileBio"]</p>
                <div class="profile-card__links">
                    <a href="https://www.linkedin.com/in/matheus-thomaz-braum/" target="_blank" rel="noopener">
                        <i class="bi bi-linkedin"></i>
                        <span>LinkedIn</span>
                    </a>
                    <a href="https://github.com/ThBraum" target="_blank" rel="noopener">
                        <i class="bi bi-github"></i>
                        <span>GitHub</span>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-lg-7">
            <div class="about-metrics mb-4">
                <div class="about-metric">
                    <strong>@Localizer["MetricsAvailabilityValue"]</strong>
                    <span>@Localizer["MetricsAvailabilityDescription"]</span>
                </div>
                <div class="about-metric">
                    <strong>@Localizer["MetricsLanguagesValue"]</strong>
                    <span>@Localizer["MetricsLanguagesDescription"]</span>
                </div>
                <div class="about-metric">
                    <strong>@Localizer["MetricsRoleBasedValue"]</strong>
                    <span>@Localizer["MetricsRoleBasedDescription"]</span>
                </div>
            </div>

            <div class="about-timeline">
                <div class="timeline-card">
                    <h4>@Localizer["TimelineOnboardingTitle"]</h4>
                    <p>@Localizer["TimelineOnboardingDescription"]</p>
                </div>
                <div class="timeline-card">
                    <h4>@Localizer["TimelineOperationsTitle"]</h4>
                    <p>@Localizer["TimelineOperationsDescription"]</p>
                </div>
                <div class="timeline-card">
                    <h4>@Localizer["TimelineInsightsTitle"]</h4>
                    <p>@Localizer["TimelineInsightsDescription"]</p>
                </div>
            </div>
        </div>
    </div>
</div>
